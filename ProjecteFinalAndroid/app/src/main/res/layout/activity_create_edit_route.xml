<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.example.oriolpons.projectefinalandroid.createEditRouteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="NOMBRE DE LA RUTA"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRouteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/detailsElementBackground"
                android:ems="10"
                android:hapticFeedbackEnabled="false"
                android:hint="Introduce el nombre de tu ruta"
                android:inputType="text|textPersonName"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="DESCRIPCIÃ“N DE LA RUTA"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/detailsElementBackground"
                    android:gravity="top|left"
                    android:hint="Describe de que trata la ruta..."
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="4"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="14dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="LOCALES EN TU RUTA"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageButton
                        android:id="@+id/btnFilter1"
                        android:layout_width="128dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_custom"
                        android:elevation="6dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:srcCompat="@android:drawable/ic_menu_search" />

                    <EditText
                        android:id="@+id/edtFilter1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/detailsElementBackground"
                        android:ems="10"
                        android:hint="Filtra por el nombre del local"
                        android:inputType="text|textPersonName"
                        android:padding="5dp"
                        android:textAlignment="textStart"
                        android:textSize="17sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerLocal"
                    android:layout_width="match_parent"
                    android:layout_height="75dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="LISTA DE LOCALES"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageButton
                        android:id="@+id/btnFilter2"
                        android:layout_width="128dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_custom"
                        android:elevation="6dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:srcCompat="@android:drawable/ic_menu_search" />

                    <EditText
                        android:id="@+id/edtFilter2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/detailsElementBackground"
                        android:ems="10"
                        android:hint="Filtra por el nombre del local"
                        android:inputType="text|textPersonName"
                        android:padding="5dp"
                        android:textAlignment="textStart"
                        android:textSize="17sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerList"
                    android:layout_width="match_parent"
                    android:layout_height="75dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_back_int"
                android:paddingLeft="20dp"
                android:paddingRight="44dp"
                app:srcCompat="?android:attr/homeAsUpIndicator" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="200dp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:paddingLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="110dp"
        android:paddingRight="110dp">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:text="Aceptar"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="330dp"
        android:paddingRight="20dp">

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom_warning"
            android:src="@drawable/delete_icon" />

    </LinearLayout>
</RelativeLayout>
